<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    tools:ignore="UnusedNavigation"
    app:startDestination="@id/galleryFragment">

    <fragment
        android:id="@+id/galleryFragment"
        android:name="com.kcriss.gallery.ui.gallery.GalleryFragment"
        android:label="gallery"
        tools:layout="@layout/fragment_gallery">
        <action
            android:id="@+id/action_galleryFragment_to_pagePhotoFragment"
            app:destination="@id/pagePhotoFragment" />
    </fragment>
    <fragment
        android:id="@+id/pagePhotoFragment"
        android:name="com.kcriss.gallery.ui.photo.PagePhotoFragment"
        android:label="fragment_page_photo"
        tools:layout="@layout/fragment_page_photo" />
</navigation>